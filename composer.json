{
    "name": "friendsofcake2/phpstan-cakephp2",
    "description": "An extension to help test CakePHP 2 projects with PHPStan",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "friendsofcake2/cakephp": "^2.10.24",
        "nunomaduro/phpinsights": "^2.7",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "PHPStanCakePHP2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPStanCakePHP2\\Test\\": "tests/"
        },
        "classmap": [
            "tests/Feature/classes",
            "vendor/friendsofcake2/cakephp/lib/Cake/Cache",
            "vendor/friendsofcake2/cakephp/lib/Cake/Config",
            "vendor/friendsofcake2/cakephp/lib/Cake/Console/Shell.php",
            "vendor/friendsofcake2/cakephp/lib/Cake/Core",
            "vendor/friendsofcake2/cakephp/lib/Cake/Controller",
            "vendor/friendsofcake2/cakephp/lib/Cake/Event",
            "vendor/friendsofcake2/cakephp/lib/Cake/Model",
            "vendor/friendsofcake2/cakephp/lib/Cake/Utility",
            "vendor/friendsofcake2/cakephp/lib/Cake/View"
        ]
    },
    "scripts": {
        "phpinsights": "phpinsights analyse --no-interaction --ansi --config-path=phpinsights.php --summary src",
        "phpinsights-github": "phpinsights analyse --no-interaction --ansi --config-path=phpinsights.php --format=github-action src",
        "phpstan": "phpstan",
        "phpunit": "phpunit",
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpinsights"
        ]
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}
